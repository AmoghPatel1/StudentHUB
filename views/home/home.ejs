<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="./css/main.css">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.6/css/unicons.css">
    </head>

    <body>
        <%- include('../includes/nav-bar.ejs') %>

            <%- include('../includes/create-issue-modal.ejs') %>

                <main>
                    <div class="container">
                        <!-- ------------------- LEFT --------------------------->
                        <div class="left">

                            <%- include('../includes/side-bar.ejs') %>

                                <!-------------------END OF SIDEBAR-------------------->
                        </div>



                        <!-- ------------------- MIDDLE --------------------------->
                        <div class="middle">
                            <h3 class="trending-issues">Trending issues</h3>
                            <div class="stories">
                                <% trendingPosts.forEach(post=>{ %>
                                    <div class="story"
                                        style="background:url('../images/<%=post.postImage%>') no-repeat center center/cover;">
                                        <div class="profile-photo">
                                            <img src="../images/<%= post.postedBy.profilePic %> ">
                                        </div>
                                        <a href="/profile?id=<%=post.postedBy._id.toString()%>"
                                            style="text-decoration: none;color: white;z-index: 50;">
                                                <%= post.postedBy.username %>
                                        </a>
                                    </div>
                                    <% }); %>
                            </div>
                            <!-- --------------END OF STORIES-------------->

                            <form class="create-post" onclick="openModal()">
                                <div class="profile-photo">
                                    <img src="../images/<%= profilePic %>">
                                </div>
                                <input type="text" placeholder="Is there anything bugging you?" id="create-post">
                                <input type="submit" value="Post" class="btn btn-primary">
                            </form>


                            <!----------------------FEEDS------------>


                            <%- include('../includes/feed.ejs') %>

                        </div>




                        <!-- ------------------- RIGHT --------------------------->
                        <div class="right">

                            <!-- --------------------SUGGESTED USERS --------------------------->

                            <%- include('../includes/suggested-user.ejs') %>

                        </div>
                    </div>
                </main>


                </div>


                <script src="./js/index.js"></script>
                <%- include('../includes/end.ejs') %>