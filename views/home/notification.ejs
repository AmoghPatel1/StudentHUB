<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="./css/main.css">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.6/css/unicons.css">
    </head>

    <body>
        <%- include('../includes/nav-bar.ejs') %>

            <%- include('../includes/create-issue-modal.ejs') %>

                <main>
                    <div class="container">
                        <!-- ------------------- LEFT --------------------------->
                        <div class="left">

                            <!-- --------------------SIDEBAR----------------------->

                            <%- include('../includes/side-bar.ejs') %>

                                <!-------------------END OF SIDEBAR-------------------->

                        </div>



                        <!-- ------------------- MIDDLE --------------------------->
                        <div class="middle">
                            <h3 class="notification-page">Notifications</h3>

                            <div class="notifications">

                                <% notifications.forEach(notification=>{ %>
                                    <div class="notification">
                                        <div class="profile-photo">
                                            <img src="./images/<%=notification.notificationAboutUser.profilePic%>"
                                                alt="">
                                        </div>
                                        <div class="notification-body">
                                            <b>
                                                <%= notification.notificationAboutUser.username %>
                                            </b>
                                            <%= notification.notificationType %> .
                                                <small class="text-muted">
                                                    15 mins ago
                                                </small>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
                        </div>




                        <!-- ------------------- RIGHT --------------------------->
                        <div class="right">
                            <!-- --------------------SUGGESTED USERS --------------------------->

                            <%- include('../includes/suggested-user.ejs') %>
                        </div>
                    </div>
                </main>


                </div>
                <script src="./js/index.js"></script>
                <%- include('../includes/end.ejs') %>