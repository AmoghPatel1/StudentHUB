<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="../css/adminMain.css">
    <link rel="stylesheet" href="../css/main.css">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.6/css/unicons.css">
    </head>

    <body>
        <%- include('../includes/nav-bar.ejs') %>

            <%- include('../includes/create-issue-modal.ejs') %>
                <%- include('../includes/post-modal.ejs') %>

                    <main>
                        <div class="container">
                            <!-- ------------------- LEFT --------------------------->
                            <div class="left">

                                <%- include('../includes/side-bar.ejs') %>

                                    <!-------------------END OF SIDEBAR-------------------->
                            </div>



                            <!-- ------------------- MIDDLE --------------------------->
                            <div class="middle">

                                <!----------------------FEEDS------------>

                                <% Users.forEach((user,index)=>{ %>
                                    <a class="profile profile_<%= index %>" href="/profile?id=<%=user._id%>">
                                        <div class="content">
                                            <div class="profile-photo">
                                                <img src="../images/<%= user.profilePic %>"
                                                    onerror="this.onerror=null;this.src='../images/default-profile.jpg'"
                                                    style="object-fit: cover;
                                            min-width: 100%;
                                            min-height: 100%" />
                                            </div>
                                            <div class="handle">
                                                <h4>
                                                    <%= user.username %>
                                                </h4>
                                                <p class="text-muted">
                                                    <%= user.email %>
                                                </p>
                                            </div>
                                        </div>
                                    </a>
                                    <% }); %>
                            </div>




                            <!-- ------------------- RIGHT --------------------------->
                            <div class="right">

                                <!-- --------------------SUGGESTED USERS --------------------------->

                                <%- include('../includes/suggested-user.ejs') %>

                            </div>
                        </div>
                    </main>


                    </div>


                    <script src="./js/index.js"></script>
                    <%- include('../includes/end.ejs') %>